---

interface Props {
    title: string
    description: string
    link?: string
    date: string
    tecnologias: any
}

const { date, title, description, tecnologias} = Astro.props


---


<li class="ms-4 mb-10">
    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
    <time class="mb-1 text-sm font-normal leading-none text-white dark:text-white">{date}</time>
    <h3 class="text-base md:text-lg font-semibold text-gray-400 dark:text-white mt-4">{title}</h3>
    <p class="mt-2 mb-6 text-sm md:text-base font-normal text-white dark:text-gray-400">{description}</p>
    <h3 class="text-xs md:text-sm font-semibold text-gray-400 mb-4">TECNOLOG√çAS</h3>
    <ul class="flex">
        {tecnologias?.map((tecno) => (
            <li class="mr-2 md:mr-4" >
                <tecno.icono class="size-5 md:size-6"/>
            </li>
        ))}
    </ul>
</li>